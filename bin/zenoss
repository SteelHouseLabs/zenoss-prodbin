#!/usr/bin/env bash
#
# zenmon        This shell script takes care of starting and stopping zenmon.
#               
# chkconfig: 2345 80 30
# description: Zenoss is a monitoring program written by Zenoss, Inc.

if [ -z "$ZENHOME" ] ; then
  for d in $HOME /home/zenoss ; do 
    for f in .bash_login .bash_profile .profile .bashrc ; do
       if [ -z "$ZENHOME" ] ; then
          [ -f $d/$f ] && . $d/$f
       fi
    done
  done
fi
if [ -z "$ZENHOME" ] ; then
  ZENHOME=/usr/local/zenoss
fi

. $ZENHOME/bin/zenfunctions
C=
C="$C zeoctl"
C="$C zopectl"
C="$C zenxevent"
C="$C zenmodeler"
C="$C zenperfsnmp"
C="$C zenperfxmlrpc"
C="$C zenprocess"
C="$C zenping"
C="$C zensyslog"
C="$C zenstatus"
C="$C zenactions"
C="$C zentrap"
C="$C zenagios"
C="$C zencacti"
CMDS=$C

reverse() {
    args=
    for i
    do
       args="$i $args"
       shift
    done
    echo $args
}

FUNC=$CMD

issue() {
    for cmd in $CMDS
    do
        echo -n "Daemon: $cmd "
        if  echo $cmd | grep -q ctl; then
            sudo $ZENHOME/bin/$cmd "$FUNC"
        else
            $ZENHOME/bin/$cmd "$FUNC"
        fi
    done
}

case "$FUNC" in
  start)
        issue
        ;;
  stop)
        CMDS=`reverse $CMDS`
        issue
        ;;
  restart)
        CMDS=`reverse $CMDS`
	FUNC=stop
	issue
        CMDS=`reverse $CMDS`
	FUNC=start
        issue
        ;;
  status)
        issue
        ;;
  *)
        echo $"Usage: $0 {start|stop|restart|status}"
        exit 1
esac
exit $?
