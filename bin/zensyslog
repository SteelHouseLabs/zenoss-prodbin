. $ZENHOME/bin/zenfunctions

PORT=`getPort 514 --syslogport $@`
SUDO="$ZENHOME/bin/zensocket --listen  --proto=udp --port=$PORT -- "
PRGHOME=$ZENHOME/Products/ZenEvents
PRGNAME=zensyslog.py
CFGFILE=$CFGDIR/zensyslog.conf
PIDFILE=$VARDIR/$PRGNAME.pid

generic "$@" --useFileDescriptor='$privilegedSocket'
