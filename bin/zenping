#!/bin/sh

. $ZENHOME/bin/zenfunctions

PRGHOME=$ZENHOME/Products/PingMonitor
PRGNAME=PingMonitor.py

LOGFILE=$CFGDIR/pingmonlog.ini
CFGFILE=$CFGDIR/pingmon.conf

PIDFILE=$VARDIR/$PRGNAME.pid

stop() {
    kill -9 `cat $PIDFILE`
}

case "$1" in
  run)
        run
        ;;
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        restart
        ;;
  status)
        status
        ;;
  help)
        help
        ;;
  *)
        echo $"Usage: $0 {run|start|stop|restart|status|help}"
        exit 1
esac
exit $?
