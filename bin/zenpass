cd $ZENHOME

echo -n 'Password for the Zenoss "admin" user: '
stty -echo
read ZOPEPASSWORD
echo
stty echo

$ZENHOME/lib/python/Zope2/utilities/zpassswd.py -u admin -p $ZOPEPASSWORD inituser
zopectl stop
zopectl start
