#!/bin/bash

cd $ZENHOME

if [ -z "$ZOPEPASSWORD" ] ; then
   echo -n 'Password for the Zenoss "admin" user: '
   stty -echo
   read ZOPEPASSWORD
   echo
   stty echo
fi

zpasswd.py -u admin -p $ZOPEPASSWORD inituser
zopectl restart
sleep 2
sed -e "s/zopepassword.*/zopepassword $ZOPEPASSWORD/" < \
    $ZENHOME/etc/zenperfsnmp.conf > /tmp/zenperfsnmp.conf
mv /tmp/zenperfsnmp.conf $ZENHOME/etc
zenperfsnmp restart
