#! /usr/bin/env bash

#################################################################
#
#   Copyright (c) 2003 Confmon Corporation. All rights reserved.
#
#################################################################

read -p "Are you sure you would like to delete Zenoss? (Y/n) " -n 1
echo ""
if [ $REPLY != 'Y' ] ; then
        echo No actions taken.
        exit
else
    . $ZENHOME/bin/zenfunctions

    cd $ZENHOME/Products

    for d in $ZENPRODUCTS
    do
        echo Removing product $d...
        rm -rf $d
        rm -f VERSION.txt
    done
    rm -rf .svn
    rm -f *.txt
    exit;
fi

       

