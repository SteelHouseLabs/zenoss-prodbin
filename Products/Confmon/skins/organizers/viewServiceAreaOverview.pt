<span tal:replace="structure here/standard_html_header"/>
    <br>
    <table border="0" cellpadding="3" width="100%" align="center" bgcolor=
    "#ffffff" cellspacing="1">
      <tbody>
        <tr>
          <th class="tabletitle" align="left" colspan="4">
          Service Area
          </th>
		  </tr>
		  <tr>
          <th class="tableheader" align="left">
            Name
          </th>
          <td class="tablevalues" colspan="1" bgcolor="#ffffff">
          <span tal:replace="here/id">sa id</span>
          </td>
          <th class="tableheader" align="left">
            Description
          </th>
          <td class="tablevalues" colspan="1">
          <span tal:replace="here/description">sa desc</span>
          </td>
        </tr>
      </tbody>
    </table>
	<br>
    <table metal:use-macro="here/deviceListMacro/macros/devList"></table>
    <br>
    <table border="0" cellpadding="3" width="100%" align="center" bgcolor=
    "#ffffff" cellspacing="1">
      <tbody>
        <tr>
          <th class="tabletitle" align="left" colspan="6">
           Systems
          </th>
        </tr>
        <tr tal:condition="python: here.systems.objectValuesAll()">
          <th class="tableheader" align="left" colspan="1">
            Name 
          </th>
		  <th class="tableheader" align="left" colspan="1">
            System Class
          </th>
		  <th class="tableheader" align="left" colspan="1">
            Description
          </th>
		  <th class="tableheader" align="left" colspan="1">
            Ping
          </th>
		  <th class="tableheader" align="left" colspan="1">
            SNMP
          </th>
	  </tr>
      <tr tal:condition="python: not here.systems.objectValuesAll()">
        <td class="tablevalues" align="left">
        No Systems
        </td>
      </tr>
	  <tr tal:repeat="sys here/systems/objectValuesAll">
		<td class="tablevalues" align="left">
        <a href="_" target="rightFrame"
        tal:attributes="href sys/getPrimaryUrlPath">
        <span tal:replace="sys/id">system</span>
        </a></td>
		<td class="tablevalues" align="left">
        <span tal:replace="sys/systemClass">class</span>
        </td>
		<td class="tablevalues" align="left">
        <span tal:replace="sys/description">desc</span>
        </td>
        <span tal:define="stat sys/pingStatus">
		<td class="ps" align="left"
        tal:attributes="bgcolor python: sys.statusColor(stat)">
        <span tal:replace="stat">ping status</span>%
        </td>
        </span>
        <span tal:define="stat sys/snmpStatus">
		<td class="ps" align="left"
        tal:attributes="bgcolor python: sys.statusColor(stat)">
        <span tal:replace="stat">snmp status</span>%
        </td>
        </span>
        </tr>
	</tbody>
    </table>
<span tal:replace="structure here/standard_html_footer"/>
