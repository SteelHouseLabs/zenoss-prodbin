<h2>Create a new ZenPack:</h2>
<form tal:attributes="action here/absolute_url_path;" 
        method="post" name="addZenPack">
<input type="hidden" name="zenScreenName" value="/zport/dmd/viewZenPacks"/>
<span id="errmsg" style="color:red;"></span>
<table>
<tr><td>
        <span id="new_id_label">ID:&nbsp;</span>:
</td><td>
<input id="new_id" name="id">
<input type="hidden" id="checkValidIdPath" 
        tal:attributes="value here/absolute_url_path">
</td></tr>
<tr><td>Author:       </td><td><input name="author"/></td></tr>
<tr><td>Organization: </td><td><input name="organization"/></td></tr>
<tr><td>Version:      </td><td><input name="version"/></td></tr>
</table>
<br>
<div align="center">
<input tal:attributes="id string:dialog_submit;
                        disabled string:True;
                        type string:submit;
                        value string:OK"
                        name="manage_addZenPack:method" />
<input tal:attributes="id string:dialog_cancel;
                        type string:button;
                        value string:Cancel;
                        onclick string:$$('dialog').hide()" />
</div>
</form>
