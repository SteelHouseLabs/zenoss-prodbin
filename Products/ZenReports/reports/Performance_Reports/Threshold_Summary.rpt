<tal:block metal:use-macro="here/templates/macros/page1">
<tal:block metal:fill-slot="breadCrumbPane">
    <span metal:use-macro="here/miscmacros/macros/reportBreadCrumbsList"/>    
</tal:block>
<tal:block metal:fill-slot="contentPane">
<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="
    objects python:here.ReportServer.plugin('threshold', here.REQUEST);
    tableName string: thresholdsummaryreport;
    batch python:here.ZenTableManager.getBatch(tableName,
                                               objects,
                                               sortedHeader='seconds', 
                                               sortedSence='desc');
    ">
    <th class="tabletitle" colspan="5">All Monitored Components</th>
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'deviceName','Device')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'componentName','Component')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'eventClass','Event Class')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'seconds','Duration')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'percentTime','%')"/>
    </tr>
    <tal:block tal:repeat="r batch">
        <tr tal:define="odd repeat/r/odd"
            tal:attributes="class python:test(odd,'odd','even')">
           <td tal:condition="r/device">
                 <a tal:attributes="href r/device/getPrimaryUrlPath"
                    tal:content="r/device/id"/>
           </td>
           <td tal:condition="not:r/device" tal:content='r/deviceName'/>
           <td tal:condition="r/component">
                 <a tal:attributes="href r/component/getPrimaryUrlPath"
                    tal:content="r/component/name"/>
           </td>
           <td tal:condition="not:r/component" tal:content='string:N/A'/>
           <td tal:condition="r/eventClass">
                 <a tal:attributes="href python:r.eventClass.getPrimaryUrlPath() + 'viewHistoryEvents'"
                    tal:content="r/eventClass/id"/>
           </td>
           <td tal:condition="not:r/eventClass" tal:content='r/eventClassName'/>
           <td tal:content="r/duration"/>
           <td tal:content="python: r.percentString(r.percentTime, 1)"/>
        </tr>
    </tal:block>
    <tr>
        <td colspan="5" class="tableheader" align='center'>
        <form metal:use-macro="here/zenTableNavigation/macros/navtool"/>
        </td>
    </tr>
</table>
</tal:block>
</tal:block>
