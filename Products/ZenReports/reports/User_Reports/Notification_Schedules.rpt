<tal:block tal:define="
	objects  python:here.ZenUsers.getAllActionRules();
	objects python: (hasattr(request, 'doExport') and list(objects)) or objects;
    tableName string: allrulesreport;
    batch python:here.ZenTableManager.getBatch(tableName,objects, 
                                               sortedHeader='getUserid');
	exportFields python:['getUserid', 'id', 'delay',
						'enabled', 'nextActiveNice', 'nextDurationNice',
						'repeatNice', 'where'];
	">
<tal:block metal:use-macro="here/reportMacros/macros/exportableReport">
<tal:block metal:fill-slot="report">

<tal:block metal:use-macro="here/templates/macros/page1">
<tal:block metal:fill-slot="breadCrumbPane">
    <span metal:use-macro="here/miscmacros/macros/reportBreadCrumbsList"/>    
</tal:block>
<tal:block metal:fill-slot="contentPane">

<form method="get" tal:attributes="action request/URL;"
			tal:define="tabletitle string:Notification Schedules;
                        showfilterbox python:True;
						tblcolspan string:7">
<tal:block metal:use-macro="here/zenuimacros/macros/zentable">
<tal:block metal:fill-slot="zentablecontents">

    <tr class="tableheader">
       <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'getUserid','User')"/>
       <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'id','Rule')"/>
       <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'delay','Delay')"/>
       <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'enabled','Active?')"/>
       <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'nextActiveNice','Next Active')"/>
       <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'nextDurationNice','Duration')"/>
       <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'nextRepeatNice','Repeat')"/>
    </tr>
     <span tal:repeat="rule batch" tal:omit-tag="">
            <tr class="tablevalues">
               <td><a tal:attributes="href python:rule.getUserSettingsUrl(rule.getUserid())" 
                      tal:content="rule/getUserid"/>
               </td>
               <td><a tal:attributes="href rule/getPrimaryUrlPath"
                      tal:content="rule/id"/>
               </td>
               <td tal:content="rule/delay"/>
               <td tal:content="rule/enabled"/>
               <td><a tal:attributes="href python:rule.getPrimaryUrlPath() + '/editActionRuleSchedule'" tal:content="rule/nextActiveNice"/></td>
               <td tal:content="rule/nextDurationNice"></td>
               <td tal:content="rule/repeatNice"></td>
            </tr>
            <tr class="tablevalues">
               <td/>
               <td colspan='6' tal:content="rule/where"/>
            </tr>
        </span>
    <tr>
        <td colspan="7" class="tableheader" align='center'>
        <form metal:use-macro="here/zenTableNavigation/macros/navtool"/>
        </td>
    </tr>

</tal:block>
</tal:block>
</form>

</tal:block>
</tal:block>

</tal:block>
</tal:block>
</tal:block>
