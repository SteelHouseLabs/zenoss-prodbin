<tal:block metal:use-macro="here/templates/macros/page1">
<tal:block metal:fill-slot="breadCrumbPane">
    /<a tal:attributes="
        href string:${here/absolute_url_path}/${template/id}">Add Event
    </a>
</tal:block>
<tal:block metal:fill-slot="contentPane">
    <script type="text/javascript" src="/zport/js/MochiKit.js"></script>
    <form action="/zport/dmd/ZenEventManager" method="post">
        <input type="hidden" name="zenScreenName" 
            tal:attributes="value template/id" /> 

    <table class="zentable" cellpadding="3" cellspacing="1">
        <tr>
            <td class="tableheader" align="left">
                Message
            </td>
            <td class="tablevalues" align="left">
                <textarea rows="3" cols="60" name="summary"
                    class="tablevalues"
                    tal:content="event/summary | nothing"></textarea>
            </td>
        </tr>
        <tr>
            <td class="tableheader" align="left">
                Device
            </td>
            <td class="tablevalues" align="left">
                <input class="tablevalues" type="text" 
		            size="50" name="device"
                    tal:attributes="value event/device | nothing" />
            </td>
        </tr>
        <tr>
            <td class="tableheader" align="left">
                Component
            </td>
            <td class="tablevalues" align="left">
                <input class="tablevalues" type="text" 
		            size="50" name="component"
                    tal:attributes="value event/component | nothing" />
            </td>
        </tr>
        <tr>
            <td class="tableheader" align="left">
                Severity
            </td>
            <td class="tablevalues" align="left">
                <select class="tableheader" name="severity:int">
                    <option tal:repeat="sev here/getSeverities"
                        tal:content="python:sev[0]"
                        tal:attributes="value python:sev[1]" />

                </select>
            </td>
        </tr>
        <tr>
            <td class="tableheader" align="left">
                Event Class
            </td>
            <td class="tablevalues" align="left">
                <select class="tableheader" name="eclass">
                    <option 
                        tal:repeat="eclass here/dmd/Events/getOrganizerNames"
                        tal:content="eclass"
                        tal:attributes="value eclass" />
                </select>
            </td>
        </tr>
        <tr>
            <td class=tableheader align="left" >
            </td>
            <td align="left"  class="tableheader" colspan=3>
                <input class="tableheader" type="submit" 
                    name="manage_addEvent:method" value=" Add Event "/>
            </td>
        </tr>
    </table>
    </form>
</tal:block>
</tal:block>
