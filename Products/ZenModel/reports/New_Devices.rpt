<tal:block metal:use-macro="here/templates/macros/page1">
<tal:block metal:fill-slot="breadCrumbPane">
    <span metal:use-macro="here/miscmacros/macros/reportBreadCrumbsList"/>    
</tal:block>
<tal:block metal:fill-slot="contentPane">
<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="
    objects  python:here.getDmdRoot('Devices').getSubDevices(
                                       lambda x: x.createdTime+7>=DateTime());
    tableName string: newdevicesreport;
    batch python:here.ZenTableManager.getBatch(tableName,objects,
                sortedHeader='createdTime',sortedSence='desc');
    ">
    <input type='hidden' name='tableName' tal:attributes="value tableName" />
    <input type="hidden" name="zenScreenName" 
            tal:attributes="value template/id"/>
    <tr>
        <th 
            tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'primarySortKey','Name')">Name
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'getDeviceClassPath','Class')">Class
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                tableName,'createdTime','First Seen','cmp')">
                Collection
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'getLastChange','Change','cmp')">Change
        </th>
	</tr>
	<tr tal:repeat="device batch">
		<td class="tablevalues" align="left">
            <a class="tablevalues" tal:attributes="href device/getDeviceUrl"
                tal:content="device/id">device
            </a>
        </td>
		<td class="tablevalues" align="left"
            tal:content="device/getDeviceClassPath">
            type
        </td>
		<td class="tablevalues" align="left"
            tal:content="device/getCreatedTimeString">
            prodstate
        </td >
		<td class="tablevalues" align="left"
            tal:content="device/getLastChangeString">
            prodstate
        </td >
    </tr>
    <tr>
        <td colspan="4" class="tableheader">
            <span metal:use-macro="here/zenTableNavigation/macros/navbody" />
        </td>
    </tr>
</table>
</tal:block>
</tal:block>
