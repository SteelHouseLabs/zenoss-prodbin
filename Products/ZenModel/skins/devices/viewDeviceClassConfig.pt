<span tal:replace="structure here/standard_html_header"/>
<span metal:use-macro="here/top/macros/header" />
<br>
<table border="0" cellpadding="3" width="100%" 
    align="center" bgcolor="#ffffff" cellspacing="1"
    tal:define="props here/deviceTreePropertyIds">
    <tr>
      <th class="tabletitle" align="left" colspan="3">
      Device Class Configuration
      </th>
    </tr>
    <tr>
      <th class="tableheader" align="left">Property</th>
      <th class="tableheader" align="left">Path</th>
      <th class="tableheader" align="left">Value</th>
    </tr>
    <tr tal:repeat="prop props">
      <td class="tablevalues" align="left" tal:content="prop">
        zPingInterfaceRegex
      </td>
      <td class="tablevalues" align="left" 
        tal:content="python: here.deviceTreePropertyPath(prop)"> 
        /Devices/Servers
      </td>
      <td class="tablevalues" align='left'
        tal:content="python: here.deviceTreePropertyString(prop)"> 
        int
      </td>
    </tr>
</table>
<form tal:condition="here/isManager" method="post"
    tal:attributes="action string:${request/URL1}">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table border="0" cellpadding="3" width="100%" 
    align="center" bgcolor="#ffffff" cellspacing="1">
<tr class="tabletitle"><th>Add/Update Device Property</th></tr>
<tr>
    <td>
        <select name="propname">
            <option tal:repeat="propname here/deviceTreePropertyIds"
                tal:content="propname" tal:attributes="value propname">
                    zCricketDeviceType
            </option>
        </select>
        <input class="tablevalues" type="text" name="propvalue"/>
        <input class="tablevalues" type="submit" 
            name="setDeviceTreeProperty:method" value=" Add " />
    </td>
</tr>
</table>
</form>
<form tal:condition="here/isManager" method="post"
    tal:attributes="action string:${request/URL1}">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table border="0" cellpadding="3" width="100%" 
    align="center" bgcolor="#ffffff" cellspacing="1">
<tr class="tabletitle"><th>Delete Device Property</th></tr>
<tr>
    <td>
        <select name="propname">
            <option tal:repeat="
                propname python:here.deviceTreePropertyIds(False)"
                tal:content="propname" tal:attributes="value propname">
                    zCricketDeviceType
            </option>
        </select>
        <input class="tablevalues" type="submit" 
            name="deleteDeviceTreeProperty:method" value=" Delete " />
    </td>
</tr>
</table>
</form>
<span tal:replace="structure here/standard_html_footer"/>
