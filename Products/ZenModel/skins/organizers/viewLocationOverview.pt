<span tal:replace="structure here/standard_html_header"/>
<span metal:use-macro="here/top/macros/header" />
<br>
<table border=0 cellpadding=3 width=100%
    align=center bgcolor=#ffffff cellspacing=1>
    <tr>
        <th class=tabletitle align=left colspan=2>
            Location
        </th>
    </tr>
    <tr>
        <td class=tableheader align=left width=25%>
            Name 
        </td>
        <td class=tablevalues align=left
            tal:content="here/id">name
        </td>
    </tr>
    <tr>
        <td class=tableheader align=left width=25%>
            Description
        </td>
        <td class=tablevalues align=left
            tal:content="here/description">description
        </td>
    </tr>
</table>
<br>
<table metal:use-macro="here/deviceGroupMacros/macros/status"></table>
<br tal:condition="here/sublocations/countObjects">
<table border=0 cellpadding=3 width=100% 
    align=center bgcolor=#ffffff cellspacing=1
    tal:define="objects here/sublocations/objectValuesAll;
        tableName string:locationsublocations;
        batch python:here.ZenTableManager.getBatch(tableName,objects);"
    tal:condition=objects>
    <tr>
      <th class=tabletitle align=left colspan=4>
        SubLocations
      </th>
    </tr>
    <span metal:use-macro="here/viewDeviceGroupClassOverview/macros/body" />
</table>
<br tal:condition="here/devices/countObjects">
<table metal:use-macro="here/deviceListMacro/macros/devList"></table>
<span tal:replace="structure here/standard_html_footer"/>
