<h2>Add GraphPoint</h2>
<span id="errmsg" style="color:red;"></span>

<tal:block tal:condition="not: exists: here/datasources">
<div id="threshNameACDiv" style="width:30em;position:relative;"></div>
<br /><br />
</tal:block>


<tal:block tal:condition="exists: here/datasources">
<span style="text-align:left;">
Thresholds:&nbsp;<select name='threshNames:list' multiple="1">
        <option tal:repeat="option here/getThresholdOptions"
                tal:attributes="value python: option[1]" 
                tal:content="python: option[0]" />
</select>
<br/><br/>
</span>
</tal:block>

<div id="dialog_buttons">
<input tal:attributes="id string:dialog_submit;
        type string:submit;
        value string:OK;
        onclick string:return $$('dialog').submit_form(
                                                '${here/absolute_url}')"
                        name="manage_addThresholdGraphPoints:method" />
<input tal:attributes="id string:dialog_cancel;
                        type string:button;
                        value string:Cancel;
                        onclick string:$$('dialog').hide()" />
</div>
