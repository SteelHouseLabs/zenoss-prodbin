<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">

<script type="text/javascript" src="/zport/js/MochiKit.js"></script>

<form method=post tal:attributes="action string:${here/absolute_url_path}">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id" /> 


        <tal:block tal:define="message request/message | string:State at time:; 
            tabletitle string:${message} ${here/getNowString}">
        <tal:block metal:use-macro="here/zenuimacros/macros/zentable">

        <!--====Optional titlebar slots=============

            <tal:block metal:fill-slot="filterslot">
            </tal:block>

            <tal:block metal:fill-slot="menuslot">
            </tal:block>

            ==========================================-->

        <tal:block metal:fill-slot="zentablecontents">
        <!-- BEGIN TABLE CONTENTS -->
            
    <tr>
      <td class="tableheader" align="left">SMTP Host</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="smtpHost"
            tal:attributes="value here/smtpHost" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">SMTP Port (usually 25)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="smtpPort"
            tal:attributes="value here/smtpPort" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">SMTP Username (blank for none)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="smtpUser"
            tal:attributes="value here/smtpUser|string:" />
      </td>
    </tr>    
    <tr>
      <td class="tableheader" align="left">SMTP Password (blank for none)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="password" name="smtpPass"
            tal:attributes="value here/smtpPass|string:" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">From Address for Emails</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="emailFrom"
            tal:attributes="value here/emailFrom|string:" />
      </td>
    </tr>
    <tr>
        <td class="tableheader" align="left">Use TLS?</td>
        <td class="tablevalues">
        <input type="hidden" name="smtpUseTLS:int:default" value="0">
        <input type="checkbox" value="1" name="smtpUseTLS:int"
         tal:attributes="checked request/smtpUseTLS | here/smtpUseTLS">
        </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">SNPP Host</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="snppHost"
            tal:attributes="value here/snppHost" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">SNPP Port (usually 444)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="snppPort"
            tal:attributes="value here/snppPort" />
      </td>
    </tr>

    <tr>
      <td class="tableheader" align="left">Dashboard Production State Threshold</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="prodStateDashboardThresh"
            tal:attributes="value here/prodStateDashboardThresh" />
      </td>
    </tr>

    <tr>
      <td class="tableheader" align="left">Dashboard Priority Threshold</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="priorityDashboardThresh"
            tal:attributes="value here/priorityDashboardThresh" />
      </td>
    </tr>
        
    <tr>
      <td class="tableheader" align="left">State Conversions</td>
      <td class="tablevalues">
        <textarea class="tablevalues" name="prodStateConversions:lines"
            rows="6" cols="35"
            tal:content="python: '\n'.join(here.prodStateConversions)"></textarea>
      </td>
     </tr>
     <tr>
      <td class="tableheader" align="left">Priority Conversions</td>
      <td class="tablevalues">
        <textarea class="tablevalues" name="priorityConversions:lines"
            rows="6" cols="35"
            tal:content="python: '\n'.join(here.priorityConversions)"></textarea>
      </td>
    </tr>
    <!--
    <tr>
      <td class="tableheader" align="left">Status Conversions</td>
      <td class="tablevalues">
        <textarea class="tablevalues" name="statusConversions:lines"
            rows="6" cols="35"
            tal:content="python: '\n'.join(here.statusConversions)"></textarea>
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Interface State Conversions</td>
      <td class="tablevalues">
        <textarea class="tablevalues" name="interfaceStateConversions:lines"
            rows="6" cols="35"
            tal:content="python: '\n'.join(here.interfaceStateConversions)"></textarea>
      </td>
    </tr>
    -->
    <tr>
      <td class="tableheader" align="left">Administrative Roles</td>
      <td class="tablevalues">
        <textarea class="tablevalues" name="administrativeRoles:lines"
            rows="6" cols="35"
            tal:content="python: '\n'.join(here.administrativeRoles)"></textarea>
      </td>
    </tr>

    <tr>
        <td class="tableheader"></td>
        <td class="tableheader" align="left">
            <input class="tableheader" type="submit" value=" Save " 
                name="zmanage_editProperties:method" />
        </td>
    </tr>
    

        <!-- END TABLE CONTENTS -->

        </tal:block>
        </tal:block>
        </tal:block>
        

</form>

</tal:block>
</tal:block>
