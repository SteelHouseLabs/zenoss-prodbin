<span tal:replace="structure here/standard_html_header"/>
<script metal:use-macro="here/miscmacros/macros/toggle"></script>
<span metal:use-macro="here/top/macros/header" />
<br>

<table metal:use-macro="here/deviceOrganizerStatus/macros/status"></table>

<br>
<form method="post" tal:attributes="action here/absolute_url_path">
<table border="0" cellpadding="3" width="100%" 
    align="center" bgcolor="#ffffff" cellspacing="1"
    tal:define="objects here/children;
        tableName string:systemstatuschildren;
        tableTitle string: Sub-Systems;
        batch python:here.ZenTableManager.getBatch(tableName,objects);">
    <tr>
      <th class="tabletitle" align="left" colspan="6" tal:content="tableTitle">
        Sub-Systems
      </th>
    </tr>
    <span tal:condition="objects">
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'primarySortKey','Name')">
            Name 
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'productionState','State')">
            State
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'countDevices','Devices')">
            Devices
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'omniEventCount','Events')">
            Snmp
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'omniPingStatus','Ping')">
            Ping
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'omniSnmpStatus','Snmp')">
            Snmp
        </th>
    </tr>
    <tr tal:repeat="sys batch">
        <td class="tablevalues" align="left">
            <input tal:condition="here/isManager" 
                type="checkbox" name="organizerPaths:list" 
                tal:attributes="value sys/getId"/>
            <a href="_" 
            tal:attributes="href sys/getPrimaryUrlPath"
            tal:content="sys/id">System Name</a>
        </td>
        <td class="tablevalues" align="left"
            tal:content="python:sys.convertProdState(sys.productionState)">
            Production
        </td>
        <td class="tablevalues" align="center" tal:content="sys/countDevices">
            100
        </td>
        <td class=tablevalues align=center tal:content="sys/omniEventCount">
            5
        </td>
        <span tal:define="status sys/omniPingStatus">
        <td class="statusvalues" bgcolor="#00ff00" align="center"
            tal:attributes="bgcolor python: sys.statusColor(status)"
            tal:content="status">0
        </td>
        </span>
        <span tal:define="status sys/omniSnmpStatus">
        <td class="statusvalues" bgcolor="#00ff00" align="center"
            tal:attributes="bgcolor python: sys.statusColor(status)"
            tal:content="status">0
        </td>
        </span>
    </tr>
    <tr>
        <td colspan="6" class="tableheader" align='center'>
            <span metal:use-macro="here/zenTableNavigation/macros/navbody" />
        </td>
    </tr>
    </span>
    <tr tal:condition="here/isManager">
        <td class="tableheader" colspan="6">
        <span metal:use-macro="here/deviceOrganizerStatus/macros/editor" />
        </td>
    </tr>
</table>
</form>
<br>
<table metal:use-macro="here/deviceListMacro/macros/devList"></table>
<span tal:replace="structure here/standard_html_footer"/>
