<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">

<form method="post" tal:attributes="action here/absolute_url_path">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>


<tal:block tal:define="objects here/adminRoles/objectValuesAll;
    editable here/isManager;
    tableName string:deviceadminroles;
    batch python:here.ZenTableManager.getBatch(tableName,objects); 
    tabletitle string:Administered Devices">
        <tal:block metal:use-macro="here/zenuimacros/macros/zentable">

        <!--====Optional titlebar slots=============

            <tal:block metal:fill-slot="filterslot">
            </tal:block>

            <tal:block metal:fill-slot="menuslot">
            </tal:block>

            ==========================================-->

        <tal:block metal:fill-slot="zentablecontents">
        <!-- BEGIN TABLE CONTENTS -->
            
    <input type='hidden' name='tableName' tal:attributes="value tableName" />
    
    <tr tal:define="message request/message | string:">
        <td class=tableheader colspan=5 tal:content="message" />
    </tr>
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'managedObjectName','Name')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'role','Role')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'level','Level')"/>
        <th class="tableheader">Events</th>
  </tr>
  <tal:block tal:repeat="ur batch">
  <tr tal:define="odd repeat/ur/odd"
      tal:attributes="class python:test(odd, 'odd', 'even')">
    <td class="tablevalues" align="left">
       <input type="hidden" name="ids" 
              tal:attributes="value ur/managedObjectName"/>
       <input type="checkbox" name="delids" tal:condition="editable"
              tal:attributes="value ur/managedObjectName"/>
        <a tal:attributes="href ur/managedObjectLink"
            tal:content="ur/managedObjectName">somename</a>
    </td>
    <td class="tablevalues">
    <select class="tablevalues" name="role" tal:condition="editable"
        tal:define="roles here/administrativeRoles">
        <option tal:repeat="role roles" tal:content="role"
            tal:attributes="selected python:ur.role==role"/>
    </select>
    <tal:block tal:content="ur/role" tal:condition="not:editable"/>
    </td>
    <td class="tablevalues">
    <input class="tablevalues" type='text' name="level:int" size="2"
    onkeypress="return submitViaEnter(event,'manage_editAdministrativeRoles');"
        tal:condition="editable" tal:attributes="value ur/level">
    <tal:block tal:content="ur/level" tal:condition="not:editable"/>
    </td>    
  <td class="tablevalues" align="left">
        
        <table class="zentable ">
            <tr>
                <td align='center' width='16%'
                tal:repeat="evt ur/getEventSummary"
                tal:attributes="class python:evt[0]">
                    <span 
                    tal:replace="python:'%d/%d' % (evt[1],evt[2])"></span>
                </td>
          </tr>
        
  </td>
  </tr>
  </tal:block>
  <tr>
    <td colspan="0" class="tableheader">
        <span metal:use-macro="here/zenTableNavigation/macros/navbody" />
    </td>
  </tr>
    <tr tal:condition="editable">
    <td class="tableheader" colspan="5">
        <input class="tableheader" type='text' name="name"/>
        <select class='tableheader' name='type'>
            <option value='device'>Device</option>
            <option value='system'>System</option>
            <option value='group'>Group</option>
            <option value='location'>Location</option>
        </select>
        <input class="tableheader" type="submit" 
            name="manage_addAdministrativeRole:method" value=" Add " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_editAdministrativeRoles:method" value=" Save " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_deleteAdministrativeRole:method" value=" Delete " />
    </td>
    </tr>

        <!-- END TABLE CONTENTS -->

        </tal:block>
        </tal:block>
        </tal:block>
        

</form>
</tal:block>
</tal:block>
