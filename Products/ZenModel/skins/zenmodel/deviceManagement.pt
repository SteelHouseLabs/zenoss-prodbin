<tal:comment replace="nothing">
<!-- ========================================================
    The management page for devices
 ======================================================== -->
</tal:comment>

<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">

<form action="_"  method="post" tal:attributes="action here/REQUEST/URL1">
<input type="hidden" name="zenScreenName" 
    tal:attributes="value template/id" /> 
<table class="zentable" border=0 cellpadding=3 cellspacing=1>
  <tr><th class=tabletitle align=center colspan=2>Device Management</th></tr>
    <tr>
        <td class="tableheader" align="left">Device Class Path</td>
        <td class="tableheader" align="left" colspan=3>
            <select class="tableheader" name="moveTarget"
            tal:define="
            dcs here/deviceMoveTargets;
            curdc here/getDeviceClassName"
            >
                <option tal:repeat="dc dcs" 
                    tal:attributes="value dc; selected python:dc==curdc"
                    tal:content="dc">/Server/Linux</option>
            </select>
          <input type="hidden" name="deviceNames" 
            tal:attributes="value here/getId" />
          <input class="tableheader" type="submit" name="moveDevices:method"
              value="Change" />
        </td>
    </tr>
  <tr>  
  <td class=tableheader>Run configuration collection against this device</td>
  <td class=tableheader>
      <input class="tableheader" type="submit" name="collectDevice:method"
          value=" Collect Configuration " />
  </td>
  </tr>
  <tr>
  <td class=tableheader>Reset the manage ip of this device</td>
  <td class=tableheader>
      <input class="tableheader" type="text" name="ip" size="15"
            tal:attributes="value here/getManageIp"/>
      <input class="tableheader" type="submit" name="setManageIp:method"
          value=" reset ip " />
  </td>
  </tr>
  <tr>
  <td class=tableheader>Reset the SNMP Community of this device</td>
  <td class=tableheader>
      <input class="tableheader" type="submit" 
        name="manage_snmpCommunity:method" value=" reset community " />
  </td>
  </tr>
  <tr>
  <td class=tableheader>Change the name of this device</td>
  <td class=tableheader>
      <input class="tableheader" type="text" name="newId" size="25"/>
      <input class="tableheader" type="submit" name="renameDevice:method"
          value=" rename device " />
  </td>
  </tr>
  <tr>
  <td class=tableheader>Clear heartbeat events on this device</td>
  <td class=tableheader>
      <input class="tableheader" type="submit" 
        name="manage_deleteHeartbeat:method" value=" Clear " />
  </td>
  </tr>
  <tr>
  <td class=tableheader>Delete this device from the database</td>
  <td class=tableheader>
      <input class="tableheader" type="submit" name="deleteDevice:method"
          value=" Delete Device " />
  </td>
  </tr>
  </table>
</form>

<span metal:use-macro="here/templates/macros/contentSeparator"/>

<form method="post" tal:attributes="action here/absolute_url_path">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="objects here/maintenanceWindows/objectValuesAll;
    tableName string:devicemaintenancewindow;
    batch python:here.ZenTableManager.getBatch(tableName,objects);">
    <input type='hidden' name='tableName' tal:attributes="value tableName" />
    <tr>
      <th class="tabletitle" align="left" colspan="6">
	Maintenance Windows
      </th>
    </tr>
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'primarySortKey','Name','cmp')">
            Name
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'start','Start')">
            Start
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'duration','Duration')">
            Duration
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'repeat','Repeat')">
            Repeat
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'startProductionState','Start State')">
            Start State
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'stopProductionState','Stop State')">
            Stop State
        </th>
  </tr>
  <tr tal:repeat="mw batch">
    <td class="tablevalues" align="left">
       <input type="checkbox" name="maintenanceIds" 
              tal:attributes="value mw/getId"/>
        <a href="_" 
        tal:attributes="href mw/absolute_url"
        tal:content="mw/getId">somename</a>
    </td>
    <td class="tablevalues" 
	tal:content="python: mw.start.strftime('%Y/%m/%d %H:%M:%S')"/>
    <td class="tablevalues" tal:content="mw/niceDuration"/>
    <td class="tablevalues" tal:content="mw/repeat"/>
    <td class="tablevalues" tal:content="mw/niceStartProductionState"/>
    <td class="tablevalues" tal:content="mw/niceStopProductionState"/>
  </tr>
  <tr>
    <td colspan="6" class="tableheader">
        <span metal:use-macro="here/zenTableNavigation/macros/navbody" />
    </td>
  </tr>
    <tr tal:condition="here/isManager">
    <td class="tableheader" colspan="6">
        <input type="hidden" name="id" tal:attributes="value here/getId"/>
        <input class="tableheader" type="text" name="newId"/>
        <input class="tableheader" type="submit" 
            name="manage_addMaintenanceWindow:method" value=" Add " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_deleteMaintenanceWindow:method" value=" Delete " />
        |
        <input class="tableheader" type="submit"
                name="SelectButton" value="Select All" 
                onClick="toggleSelect(this.form);return false"/>
    </td>
    </tr>
</table>
</form>
<br/>
<form method="post" tal:attributes="action here/absolute_url_path">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="objects here/adminRoles/objectValuesAll;
    editable here/isManager;
    tableName string:deviceadminroles;
    batch python:here.ZenTableManager.getBatch(tableName,objects);">
    <input type='hidden' name='tableName' tal:attributes="value tableName" />
    <tr>
      <th class="tabletitle" colspan="5">
        Adminitrators
      </th>
    </tr>
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'primarySortKey','Name')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'role','Role')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'level','Level')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'email','Email')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'pager','Pager')"/>
  </tr>
  <tr tal:repeat="mw batch">
    <td class="tablevalues" align="left">
       <input type="hidden" name="ids" 
              tal:attributes="value mw/getId"/>
       <input type="checkbox" name="delids" 
              tal:attributes="value mw/getId"/>
        <a href="_" 
        tal:attributes="href mw/userLink"
        tal:content="mw/getId">somename</a>
    </td>
    <td class="tablevalues">
    <select class="tablevalues" name="role"
        tal:define="roles here/administrativeRoles">
        <option tal:repeat="role roles" tal:content="role"
            tal:attributes="selected python:mw.role==role"/>
    </select>
    </td>
    <td class="tablevalues">
    <input class="tablevalues" type='text' name="level:int" size="2"
    onkeypress="return submitViaEnter(event,'manage_editAdministrativeRoles');"
        tal:attributes="value mw/level">
    </td>    
    <td class="tablevalues" tal:content="mw/email"/>
    <td class="tablevalues" tal:content="mw/pager"/>
  </tr>
  <tr>
    <td colspan="5" class="tableheader">
        <span metal:use-macro="here/zenTableNavigation/macros/navbody" />
    </td>
  </tr>
    <tr tal:condition="here/isManager">
    <td class="tableheader" colspan="5">
        <select class="tableheader" name="newId" 
            tal:define="us python:here.ZenUsers.getAllUserSettingsNames(
                        here.adminRoles.objectIds())">
            <option tal:repeat="u us" tal:content="u"/>
        </select>
        <input class="tableheader" type="submit" 
            name="manage_addAdministrativeRole:method" value=" Add " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_editAdministrativeRoles:method" value=" Save " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_deleteAdministrativeRole:method" value=" Delete " />
        |
        <input class="tableheader" type="submit"
                name="SelectButton" value="Select All" 
                onClick="toggleSelect(this.form);return false"/>
    </td>
    </tr>
</table>
</form>
</tal:block>
</tal:block>
