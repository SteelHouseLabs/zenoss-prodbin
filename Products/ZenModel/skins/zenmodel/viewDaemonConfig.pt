<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">
<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="
        query here/REQUEST/QUERY_STRING;
        daemon  python:query.split('=')[-1]">
    <thead>
        <tr>
            <th class="tabletitle" colspan="2">
                <code tal:content="daemon" /> Configuration File
            </th>
        </tr>
    </thead>
    <tbody tal:define="url string:${here/absolute_url_path}">
        <tr>
            <td class="tablevalues" colspan="2"> 
                <pre tal:content="python:here.getConfigData(daemon)" />
            </td>
        </tr>
        <tr>
            <td class="tableheader" />
            <td class="tablevalues"><a tal:attributes="
                href string:${url}/editDaemonConfig?daemon=${daemon}">edit this configuration</a></td>
        </tr>
    </tbody>
</table>
</tal:block>
</tal:block>
