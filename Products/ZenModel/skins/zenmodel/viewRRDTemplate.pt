<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane"
    tal:define="editable python:here.isEditable(here)">
<form method="post" tal:attributes="action here/absolute_url_path">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table class="zentable"  cellpadding="3" cellspacing="1">
    <tr tal:define="message request/message | string:State at time:">
        <th class=tabletitle colspan="3"
            tal:content="string:${message} ${here/getNowString}" />
    </tr>
    <tr>
        <td class="tableheader">Name</td>
        <td class="tablevalues" tal:condition="here/isManager">
            <input class="tablevalues" type="text" name="newId" size="40"
                tal:attributes="value here/id" />
        </td>
        <td class="tablevalues" tal:condition="not:here/isManager"
            tal:content="here/id"/>
    </tr>
    <tr>
    <td class="tableheader" colspan="2">Description</td>
    </tr>
    <tr>
    <td class="tablevalues" colspan="2">
        <textarea class="tablevalues" rows="2" cols="60" name="description:text"
            tal:content="here/description">
        </textarea>
    </td>
    </tr>
    <tr>
        <td class="tableheader" colspan="2">
            <input class="tableheader" type="submit" value="Save"
                name="zmanage_editProperties:method" />
        </td>
    </tr>
</form>
<br/>
<form method="post" tal:attributes="action here/absolute_url_path">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="tableName string:rrdtempdslist; 
        objects here/getRRDDataSources;
        batch python:here.ZenTableManager.getBatch(tableName,objects)">
    <input type='hidden' name='tableName' tal:attributes="value tableName" />
    <tal:block metal:define-macro="dsbody">
    <tr>
      <th class="tabletitle" align="left" colspan="3">RRDDataSources</th>
    </tr>
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'getId','Name')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'oid','OID')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'rrdtype','Type')"/>
    </tr>
    <tr class="tablevalues" tal:repeat="ds batch">
        <td>
            <input tal:condition="editable" 
                type="checkbox" name="ids:list" 
                tal:attributes="value ds/getId"/>
            <a tal:attributes="href ds/getPrimaryUrlPath" 
                tal:content="ds/getId">name</a>
        </td>
        <td tal:content="ds/oid"/>
        <td tal:content="ds/rrdtype"/>
    </tr>
    <tr>
        <td colspan="3" class="tableheader">
            <span metal:use-macro="here/zenTableNavigation/macros/navbody"/>
        </td>
    </tr>
    <tr class="tableheader" tal:condition="editable">
        <td colspan="3">
        <input class="tableheader" type="text" name="id"/>
        <input class="tableheader" type="submit" 
          onkeypress="return submitViaEnter(event,'manage_addRRDDataSource');" 
          name="manage_addRRDDataSource:method" value=" Add " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_deleteRRDDataSources:method" value=" Delete " />
        |
        <input class="tableheader" type="submit"
                name="SelectButton" value="Select All" 
                onClick="toggleSelect(this.form);return false"/>
        </td>
    </tr>
    </tal:block>
</table>
</form>
<br/>
<form method="post" tal:attributes="action here/absolute_url_path">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="tableName string:rrdthreshsoldist; 
        objects here/thresholds;
        batch python:here.ZenTableManager.getBatch(tableName,objects)">
    <input type='hidden' name='tableName' tal:attributes="value tableName" />
    <tal:block metal:define-macro="threshbody">
    <tr>
      <th class="tabletitle" align="left" colspan="4">Thresholds</th>
    </tr>
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'getId','Name')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'dsnames','Data Sources')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'severity','Severity')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'escalateCount','Escalate Count')"/>
    </tr>
    <tr class="tablevalues" tal:repeat="templ batch">
        <td>
            <input tal:condition="editable" 
                type="checkbox" name="ids:list" 
                tal:attributes="value templ/getId"/>
            <a tal:attributes="href templ/getPrimaryUrlPath" 
                tal:content="templ/getId">name</a>
        </td>
        <td tal:content="python:','.join(templ.dsnames)"/>
        <td tal:content="templ/severity"/>
        <td tal:content="templ/escalateCount"/>
    </tr>
    <tr>
        <td colspan="4" class="tableheader">
            <span metal:use-macro="here/zenTableNavigation/macros/navbody"/>
        </td>
    </tr>
    <tr class="tableheader" tal:condition="editable">
        <td colspan="4">
        <input class="tableheader" type="text" name="id"/>
        <input class="tableheader" type="submit" 
            onkeypress="return submitViaEnter(event,'manage_addRRDThreshold');" 
            name="manage_addRRDThreshold:method" value=" Add " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_deleteRRDThresholds:method" value=" Delete " />
        |
        <input class="tableheader" type="submit"
                name="SelectButton" value="Select All" 
                onClick="toggleSelect(this.form);return false"/>
        </td>
    </tr>
    </tal:block>
</table>
</form>
<br/>
<form method="post" tal:attributes="action here/absolute_url_path">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="tableName string:rrdgraphlist; 
        objects here/getGraphs;
        batch python:here.ZenTableManager.getBatch(tableName,objects,
                                                sortedHeader='sequence')">
    <input type='hidden' name='tableName' tal:attributes="value tableName" />
    <tal:block metal:define-macro="graphbody">
    <tr>
      <th class="tabletitle" align="left" colspan="6">Graphs</th>
    </tr>
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'sequence','Seq')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'getId','Name')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'dsnames','Data Sources')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'units','Units')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'height','Height')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'width','Width')"/>
    </tr>
    <tr class="tablevalues" tal:repeat="graph batch">
        <td>
            <input tal:condition="editable" 
                type="text" name="seqmap:list" size="2"
                tal:attributes="value graph/sequence"/>
            <span tal:condition="not:editable" tal:content="graph/sequence"/>
        </td>
        <td>
            <input tal:condition="editable" 
                type="checkbox" name="ids:list" 
                tal:attributes="value graph/getId"/>
            <a tal:attributes="href graph/getPrimaryUrlPath" 
                tal:content="graph/getId">name</a>
        </td>
        <td tal:content="python:','.join(graph.dsnames)"/>
        <td tal:content="graph/units"/>
        <td tal:content="graph/height"/>
        <td tal:content="graph/width"/>
    </tr>
    <tr>
        <td colspan="6" class="tableheader">
            <span metal:use-macro="here/zenTableNavigation/macros/navbody"/>
        </td>
    </tr>
    <tr class="tableheader" tal:condition="editable">
        <td colspan="6">
        <input class="tableheader" type="text" name="id"/>
        <input class="tableheader" type="submit" 
            onkeypress="return submitViaEnter(event,'manage_addRRDGraph');" 
            name="manage_addRRDGraph:method" value=" Add " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_deleteRRDGraphs:method" value=" Delete " />
        |
        <input class="tableheader" type="submit"
                name="SelectButton" value="Select All" 
                onClick="toggleSelect(this.form);return false"/>
        |
        <input class="tableheader" type="submit" 
            name="manage_resequenceRRDGraphs:method" value=" Re-Sequence " />
        </td>
    </tr>
    </tal:block>
</table>
</form>
</tal:block>
</tal:block>
