  <body onload="document.login.__ac_name.focus();">
    <table width="100%" cellpadding="0" cellspacing="0" border="0">
    <tr><td align="center">
    &nbsp;<br/><br/>
    &nbsp;<br/><br/>
    &nbsp;<br/><br/>
    &nbsp;<br/><br/>

    <table id="loginback" cellpadding="0" cellspacing="0" border="0">
    <tr><td>
    <form method="post" action="" name="login"
          tal:attributes="action string:${here/absolute_url}/login">

      <input type="hidden" name="came_from" value=""
             tal:attributes="value request/came_from | string:"/>
      <table cellpadding="2">
        <thead>
            <tr>
                <th class="tabletitle" colspan="2">Zenoss Login</th>
            </tr>
        </thead>
        <tr>
          <td class="tableheader"><b>Username:</b> </td>
          <td class="tablevalues"><input type="text" name="__ac_name" size="30" /></td>
        </tr>
        <tr>
          <td class="tableheader"><b>Password:</b></td>
          <td class="tablevalues"><input type="password" name="__ac_password" size="30" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <tal:block define="
                    came_form here/REQUEST/form/came_from | nothing;
                    submitted python:came_form.find('submitted=true') + 1;
                    ">
                    <span class="error" tal:condition="submitted">
                    The entered password or <br />username is incorrect.
                    </span>
                </tal:block>
            <input type="hidden" name="submitted" value="true" />
            </td>
        </tr>
        <tr>
          <td colspan="2">
            <br />
            <input type="submit" value=" Log In " />
          </td>
        </tr>
      </table>

    </form>
    </td></tr>
    </table>

    </td></tr>
    </table>

  </body>

