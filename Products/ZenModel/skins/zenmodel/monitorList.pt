<tal:block metal:use-macro="here/templates/macros/page3">
<tal:block metal:fill-slot="contentPane">

<form method="post" tal:attributes="action here/absolute_url_path">
<table class="zentable" cellpadding="3" cellspacing="1" 
    tal:define="objects python:here.objectSubValues();
    tableName string:monitorlist;
    batch python:here.ZenTableManager.getBatch(tableName,objects);">
    <tr tal:condition="batch">
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'primarySortKey','Name','cmp',
                    'tableheader','colspan=1')">Name
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'createdTime','Creation Time','cmp')">
            Creation Time
        </th>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                    tableName,'bobobase_modification_time',
                    'Last Modification','cmp')">
            Last Modification 
        </th>
    </tr>
    <tr tal:condition="python: not batch">
        <td colspan="3" class="tablevalues">No contents</td>
    </tr>
    <tal:block tal:repeat="mon batch">
    <tr tal:define="odd repeat/mon/odd"
        tal:attributes="class python:test(odd, 'odd', 'even')">
      <td class="tablevalues" colspan="1" bgcolor="#ffffff">
        <input tal:condition="here/isManager" 
               type="checkbox" name="ids:list" 
               tal:attributes="value mon/id"/>
        <a tal:attributes="href mon/getPrimaryUrlPath" 
           tal:content="mon/id"/>
      </td>
      <td class="tablevalues"
        tal:content="python: mon.createdTime.strftime('%Y/%m/%d %H:%M:%S')"/>
      <td class="tablevalues"
        tal:content="python: mon.bobobase_modification_time().strftime(
                                            '%Y/%m/%d %H:%M:%S')"/>
    </tr>
    </tal:block>
    <tr tal:condition="here/isManager">
    <td class="tableheader" colspan="3">
        <input class="tableheader" type="text" name="id"/>
        <input class="tableheader" type="submit" 
            name="manage_addMonitor:method" value=" Add " /> 
        |
        <input class="tableheader" type="submit" 
            name="manage_removeMonitor:method" value=" Delete " />
        |
        <input class="tableheader" type="submit"
                name="SelectButton" value="Select All" 
                onClick="toggleSelect(this.form);return false"/>
    </td>
    </tr>
</table>
</form>

</tal:block>
</tal:block>
