        <td>
            <a href="/zport/dmd"><img border="0" src="logo.gif"></a>
        </td>

        <td  valign="middle" align="right" width="35%">
            <form action="/zport/dmd/deviceSearchResults" method="POST">
                <input type="text" name="query" size="20"
                    tal:attributes="value request/query | string:"/>
                <input type="submit" name="submit" value="Search Devices"/>
            </form> 
       </td>
       <td  valign="middle" align="right" width="55%">
        <p>
           <a href="#">demo@foo.com</a>
           | <a href="#">Settings</a>
           | <a href="#">Log Out</a>
           | <a href="#">Help</a>
         </p>
