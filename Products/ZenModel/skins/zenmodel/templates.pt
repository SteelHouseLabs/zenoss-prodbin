<!-- ======================================================
    This page is used as the page-level templates
    and associated macros
 ====================================================== -->
<!-- ======================================================
    Page1 - page template that just has a content area
 ====================================================== -->
<html metal:define-macro="page1">
    <head metal:use-macro="here/templates/macros/head1"/>
	<body>
	   <div id="frame">
            <div metal:use-macro="here/templates/macros/leftPane"/>
	        <div id="rightPane">
                <tal:block metal:define-slot="rightPane">
                    <div id="contentPane">
                        <tal:block metal:define-slot="contentPane">
                            CONTENT GOES HERE
                        </tal:block>
                    </div>
                </tal:block>
            </div>
       </div>
    </body>
</html>

<!-- ======================================================
    Page2 - page template that adds breadCrumbs and tabs
          - extends the page1 template
 ====================================================== -->
<tal:block metal:define-macro="page2">
    <html metal:use-macro="here/templates/macros/page1" >
        <tal:block metal:fill-slot="rightPane">
            <div metal:use-macro="here/templates/macros/breadCrumbPane"/>
            <div metal:use-macro="here/templates/macros/tabsPane"/>
            <div id="contentPane">
                <tal:block metal:define-slot="contentPane">
                        CONTENT GOES HERE
               </tal:block>
            </div>
        </tal:block>
    </html>
</tal:block>

<!-- ======================================================
    Page3 - page template that with BreadCrumbs and no tabs
 ====================================================== -->
<tal:block metal:define-macro="page3">
    <html metal:use-macro="here/templates/macros/page1" >
        <tal:block metal:fill-slot="rightPane">
            <div metal:use-macro="here/templates/macros/breadCrumbPane"/>
            <div id="contentPane">
                <tal:block metal:define-slot="contentPane">
                        CONTENT GOES HERE
               </tal:block>
            </div>
        </tal:block>
    </html>
</tal:block>

<!-- ======================================================
    Page4 - page template that with tabs and no BreadCrumbs
 ====================================================== -->
<tal:block metal:define-macro="page4">
    <html metal:use-macro="here/templates/macros/page1" >
        <tal:block metal:fill-slot="rightPane">
            <div metal:use-macro="here/templates/macros/tabsPane"/>
            <div id="contentPane">
                <tal:block metal:define-slot="contentPane">
                        CONTENT GOES HERE
               </tal:block>
            </div>
        </tal:block>
    </html>
</tal:block>

