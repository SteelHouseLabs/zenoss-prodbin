-->


<browser:resourceDirectory
    name="zenui"
    directory="resources"
    />


<browser:page
    template="templates/base-new.pt"
    name="dashboard"
    for="*"
    permission="zope2.Public"
    />

<browser:page
    template="templates/base-new.pt"
    name="nocview"
