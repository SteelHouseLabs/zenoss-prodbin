    for="*"
    permission="zope2.Public"
    />

<browser:page
    template="templates/base-new.pt"
    name="notifications"
    for="*"
    permission="zope2.Public"
    />

<browser:page
    template="templates/base-new.pt"
    name="itinfrastructure"
    for="*"
    permission="zope2.Public"
    />

<browser:page
    template="templates/base-new.pt"
    name="reports"
    for="*"
    permission="zope2.Public"
    />

<browser:page
    template="templates/base-new.pt"
    name="users"
    for="*"
    permission="zope2.Public"
    />

<browser:page
    template="templates/base-new.pt"
    name="advanced"
    for="*"
    permission="zope2.Public"
    />


<include package=".eventconsole"/>

</configure>
